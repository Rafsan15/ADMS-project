                            </div>
                          }
                           
                            &nbsp;
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <h5>Skills Required</h5>
                                @foreach (var p in Model.SkillName)
                                {
                                    @p
                                    @:&nbsp;

                                }
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-3">
                                <h6>Project ID: @Model.PostId</h6>
                            </div>
                        </div>

                    </div>
