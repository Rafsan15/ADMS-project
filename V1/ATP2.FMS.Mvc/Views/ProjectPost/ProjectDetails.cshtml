    <div class="container">

        <br />

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Project Description</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3">
                                <h4>@Model.ProjectName</h4>
                                <p>@Model.Description</p>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-3">
                                <h4>Price: @Model.Price</h4>
                                <h4>Time: @Model.StartTime</h4>
                                <h4>End Time:@Model.EndTime</h4>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <h5>About the Owner</h5>
                                <h5>@Model.UFirstName @Model.ULastName</h5>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                5.0
                                <h6>Verified</h6>

                            </div>
                            <div class="col-md-5"></div>
                          @using (Html.BeginForm("ProjectDetails", "ProjectPost"))
                          {
                              
                         <input type="hidden" value="@CurrentUser.User.UserId" name="WUserId"/>
                            @Html.HiddenFor(m => m.PostId, new { @class = "form-control" })
