                    <input class="form-control" name="SkillId" id="inputEmail" placeholder="Skills" type="text">

                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Budget</label>
                <div class="col-lg-10">
                    <input class="form-control" name="Price" id="inputEmail" placeholder="Budget" type="text">

                </div>
            </div>
            <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label"></label>
                <div class="col-lg-10">
                    <input class="form-control" id="inputName1" name="StartTime" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" placeholder="Start Time">
                </div>

            </div>

   
    <div class="form-group">
        <label for="inputName" class="col-lg-2 control-label"></label>
        <div class="col-lg-10">
            <input class="form-control" id="inputName2" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="EndTime" placeholder="End Time">
        </div>

    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Required member</label>
        <div class="col-lg-10">
            <input class="form-control" name="Members" id="inputEmail" placeholder="Number of member" type="text">

        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Project Sections</label>
        <div class="col-lg-10">
            <select id="mySelect" onchange=" myFunction() ">
                <option selected disabled>Choose here</option>
                <option value="1">1
                <option value="2">2
                <option value="3">3
                <option value="4">4
                <option value="5">5
                <option value="6">6
                <option value="7">7
