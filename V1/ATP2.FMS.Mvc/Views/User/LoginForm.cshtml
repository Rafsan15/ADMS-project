
@{
    ViewBag.Title = "LoginForm";
}
   
  


      
        
@using (Html.BeginForm("LoginForm", "User"))
{
    <div class="container">
        <div class="row">

            <div class="col-md-3"></div>
            <div class="col-md-5">


                <form class="form-horizontal">

                    <hr />
                    <h3 align="center"> Welcome Back!</h3>
                    <div align="center" style="background-color: #fff">

                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="inputUserName" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="Email" id="inputUserName" placeholder="Email" type="email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <input class="form-control" name="Password" id="inputPassword" placeholder="Password" type="password">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default btn-block" />
                        </div>
                    </div>





                </form>


                <h6>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    Don't have an Account?
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="SignUp.html">

                        Click Here To Create One

                    </a>
                </h6>
            </div>
            <div class="col-md-4"></div>
        </div>

    </div>
}
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
