
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/Shared/AfterLoginWorker.cshtml";
}

<div class="container">

    <br />
    <div>
        <br /><br />
        <label class="control-label" for="focusedInput">
            <h2>Browse Jobs on Freelancer</h2>
        </label>

        <br /> <br />
        <div class="col-md-2">

            <label class="control-label" for="focusedInput">
                Search
            </label>
        </div>
        <div class="row">
            <form class="form-inline ">
                <div class="col-md-5">
                    <div class="form-group has-feedback">
                        <span class="glyphicon glyphicon-search form-control-feedback"></span>
                        <input class="form-control" type="text" placeholder="Search for Projects">

                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <div class="col-md-2">
            <label class="control-label" for="focusedInput">
                Skills
            </label>
        </div>
        <div class="row">

            <div class="col-md-5">
                <div class="form-group">

                    @using (Html.BeginForm("ProjectList", "Owner"))
                    {
                        <select class="form-control" name="SkillId">
                            @foreach (var s in Model.Skills)
                            {
                                <option value="@s.SkillId" name="SkillName">@s.SkillName</option>
                            }

                        </select>

                        <div class="form-group">
                            <div class="">
                                <input type="submit" value=" Submit  " class="btn btn-default btn-block" />
                            </div>
                        </div>
                    }





                </div>
            </div>

        </div>

    </div>

    <hr />
    <div>
        <div class="col-md-2">
            <label class="control-label" for="focusedInput">
                Job Type
            </label>
        </div>

        <form class="form-horizontal" runat="server">
            <div class="col-md-4">
                <div class="form-group">

                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Fixed Price Projects
                        </label>
                    </div>

                    <div class="picker">
                        <input type="range" min="30" max="100" step="1" id="red" />

                        <label style="color: red">$100</label>

                    </div>



                </div>
            </div>
        </form>

        <div class="col-md-2"> </div>

        <form class="form-horizontal">
            <div class="col-md-4">
                <div class="form-group">

                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Hourly Projects
                        </label>
                    </div>

                    <div class="picker">
                        <input type="range" min="30" max="100" step="1" id="red" />

                        <label style="color: red">$100</label>

                    </div>

                </div>
            </div>
        </form>



    </div>
    <hr />
    <div>
        @using (Html.BeginForm("ProjectList1", "Owner"))
        {
            <div class="col-md-9">
                <input type="submit" value="Clear Filter" class="btn btn-primary" />
            </div>
        }



        <div class="col-md-3">
            <ul class="pagination ">
                <li class="disabled"><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>

    </div>

    <hr />
    <div>
        <table class="table table-striped table-hover ">

            <tr>

                <th>Project/ Contest</th>
                <th>Bids/Entries</th>
                <th>Started</th>
                <th>Price(USD)</th>
            </tr>

            @foreach (var p in Model.PostAProjects)
            {
                <tr class="" style="background-color: skyblue; color: black">
                    <td>
                        <h4><a href="@Url.Action("ProjectDetails", "ProjectPost")/@p.PostId" style="color: black">@p.ProjectName </a></h4>
                        <p class="list-group-item-text">
                            @p.Description
                        </p>

                    </td>
                    <td>
                        0
                    </td>
                    <td>@p.StartTime</td>
                    <td>@p.Price</td>
                </tr>
            }








        </table>
    </div>

    <hr />
    <hr />
    <div class="col-md-9">
    </div>
    <div class="col-md-3">
        <ul class="pagination ">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
        </ul>
    </div>

</div>
