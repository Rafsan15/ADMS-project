<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #132542">
    <div class="container">
   
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle " data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

        </div>

        <div class="navbar-collapse collapse" id=".navbar-collapse">
            <ul class="nav navbar-nav">

                <li><a href=" @Url.Action("Index", "Home") "><span class="glyphicon glyphicon-home"></span></a></li>

                <li class="nav-item dropdown">
                <li>@Html.ActionLink("Lance Bucket", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

            </ul>
            <ul class="nav navbar-nav navbar-right " style="right: 30px">
                <li>@Html.ActionLink("Register", "RegisterForm", "User")</li>
                <li>@Html.ActionLink("LogIn", "LoginForm", "User")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
